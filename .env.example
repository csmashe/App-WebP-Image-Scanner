# WebP Scanner Environment Configuration
# Copy this file to .env and fill in your values
#
# NOTE: Most settings have sensible defaults in docker-compose.yml.
# You only need to set values here if you want to override the defaults.

# ===========================================
# REQUIRED: Email Settings (SendGrid)
# ===========================================
# Your SendGrid API key for sending email reports
SENDGRID_API_KEY=your-sendgrid-api-key-here

# Email sender information
FROM_EMAIL=noreply@yourdomain.com
FROM_NAME="WebP Scanner"

# Enable/disable email sending
# NOTE: Email is disabled by default. To enable, set EMAIL_ENABLED=true AND configure SENDGRID_API_KEY above.
EMAIL_ENABLED=false

# ===========================================
# OPTIONAL: Override defaults below as needed
# ===========================================

# Crawler Settings
# MAX_PAGES_PER_SCAN=1000      # Maximum pages to scan per website
# PAGE_TIMEOUT_SECONDS=30      # Timeout for loading a single page

# Queue Settings
# MAX_CONCURRENT_SCANS=2       # Maximum concurrent scans
# MAX_QUEUE_LENGTH=100         # Maximum total jobs in queue
# MAX_QUEUED_JOBS_PER_IP=20    # Maximum queued jobs per IP address

# Security Settings (rate limiting per IP)
# MAX_REQUESTS_PER_MINUTE=100
# MAX_REQUESTS_PER_HOUR=500

# Enforce HTTPS redirect (set to true for production behind a proxy)
# ENFORCE_HTTPS=false

# ===========================================
# OPTIONAL: Error Tracking (Sentry)
# ===========================================
# Sentry DSN for backend error tracking and performance monitoring
# Leave empty or omit to disable Sentry integration
# SENTRY_DSN=

# Sentry DSN for frontend (React) error tracking
# Can be the same as SENTRY_DSN or a separate project
# VITE_SENTRY_DSN=

# ===========================================
# OPTIONAL: Analytics (Google Analytics)
# ===========================================
# Google Analytics Measurement ID (e.g., G-XXXXXXXXXX)
# Leave empty or omit to disable Google Analytics
# VITE_GA_MEASUREMENT_ID=
