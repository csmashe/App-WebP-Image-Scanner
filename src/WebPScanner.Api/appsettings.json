{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning"
    }
  },
  "AllowedHosts": "*",
  "Sentry": {
    "Dsn": "",
    "SendDefaultPii": false,
    "TracesSampleRate": 0.1
  },
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=webpscanner.db"
  },
  "Crawler": {
    "MaxPagesPerScan": 2000,
    "PageTimeoutSeconds": 30,
    "NetworkIdleTimeoutMs": 500,
    "MaxNetworkIdleWaitMs": 5000,
    "PendingImageGracePeriodMs": 300,
    "ScrollToTriggerLazyImages": true,
    "ScrollStepDelayMs": 100,
    "DelayBetweenPagesMs": 500,
    "MaxRetries": 3,
    "RespectRobotsTxt": true,
    "EnableSandbox": true,
    "RestrictToTargetDomain": true,
    "MaxRequestSizeBytes": 52428800,
    "MaxRequestsPerPage": 500,
    "BlockTrackingDomains": true,
    "AllowedExternalDomains": []
  },
  "Queue": {
    "MaxConcurrentScans": 2,
    "MaxQueueSize": 100,
    "MaxQueuedJobsPerIp": 20,
    "FairnessSlotTicks": 36000000000,
    "PriorityAgingBoostSeconds": 30,
    "CooldownAfterScanSeconds": 0,
    "ProcessingIntervalSeconds": 5
  },
  "Email": {
    "FromEmail": "noreply@example.com",
    "FromName": "WebP Scanner",
    "MaxRetries": 3,
    "RetryDelayMinutes": 5
  },
  "Security": {
    "MaxRequestsPerMinute": 100,
    "EnforceHttps": true,
    "MaxScanDurationMinutes": 0,
    "MaxMemoryPerScanMb": 512,
    "RateLimitExemptIps": [],
    "EnableRequestSizeLimit": true,
    "MaxRequestBodySizeBytes": 102400
  }
}
